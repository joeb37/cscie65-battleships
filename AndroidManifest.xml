<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jbockskopf.battleships"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.jbockskopf.battleships.SplashActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.jbockskopf.battleships.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.jbockskopf.battleships.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.jbockskopf.battleships.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jbockskopf.battleships.MainActivity" />
        </activity>
        
        <activity
            android:name="com.jbockskopf.battleships.HiScoresActivity"
            android:label="@string/title_activity_hi_scores"
            android:parentActivityName="com.jbockskopf.battleships.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jbockskopf.battleships.MainActivity" />
        </activity>
    </application>

</manifest>